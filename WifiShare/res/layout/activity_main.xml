<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/basic_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="26dp"
        android:layout_marginTop="21dp"
        android:contentDescription="@string/reload_img_desc"
        android:src="@drawable/reload" />

    <TextView
        android:id="@+id/WifiConnectionStatusIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="18dp"
        android:text="@string/wifi_status_not_connected"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/InformationTextSize" />

    <LinearLayout
        android:id="@+id/clientList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/WifiConnectionStatusIndicator"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="119dp"
        android:layout_marginLeft="34dp"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>